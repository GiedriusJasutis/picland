<%- include('../includes/head')%>

<link rel="stylesheet" href="./../../public/css/style.css">
    <title>Authenticatios</title>
  </head>
  <body>
    <div class="page-container">
      <div class="content-wrap">
        <a class="btn btn-primary float-right mt-5 ml-2 mr-3" href="/auth/logout">Logout</a>
  <a class="btn btn-primary float-right mt-5 ml-2" href="/">To Picland</a>
    <div class="jumbotron main-bg-color">
      <h1 class="display-4">Picland</h1>
      <p class="lead">Add your favorite picture links</p>
      <hr class="my-4" />
      <p class="lead">Add image and descibe</p>

      <form action="/add" method="post">
        <div class="form-group">
          <label for="imageUrl">Image url</label>
          <input
            id="imageUrl"
            class="form-control"
            type="text"
            name="imageUrl"
          />
        </div>
        <div class="form-group">
          <label for="describe">Describe</label>
          <textarea
            id="describe"
            class="form-control"
            type="text"
            name="describe"
          ></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Add/Update</button>
      </form>
    </div>

    <div class="container">
      <div class="card-columns">
        <% if(userCards.length !== 0){ %>
          <% userCards.forEach(card => { %>
            <div class="card animated rollIn">
          <img
            class="card-img-top"
            src="<%= card.image%>"
            alt=""
          />
          <div class="card-body">
            <p class="card-title lead"><%= card.description %></p>
          </div>

          <!--Delete button will be hidded-->
          <form action="/delete" method="post">
            <input type="hidden" name="deleteImage" value="<%=card._id %>">
            <button type="submit" class="btn btn-dark m-3">Delete</button>
          </form>
          <a class="btn btn-primary float-left" href="/edit">Edit</a>
        </div>    
          <% })%>
        <% }else{ %>
          <h1>Emty image store</h1>
        <% } %>

      </div>
    </div>  
      </div>
    </div>
   
<%- include('../includes/footer')%>
<%- include('../includes/end')%>